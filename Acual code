    print("9>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>")
    print("10",name,"<",HPBardesplay,">")
    #11- (deck)
    while count < len(Deck):
        print(count+11,cards_names[Deck[count]])
        count += 1
    #spacer
    print()
    
    
    
    examine = int(input("Insert # to examine\n"))
    valid_awnsers = [2,3,4,5,6,7,8,10]
    count = 11
    while len(valid_awnsers) - 8 < len(Deck):
        valid_awnsers.append(count)
        count += 1
    
    idiotloop = 0
    while idiotloop == 0:
        count = valid_awnsers.count(examine)
        if examine in valid_awnsers:
            idiotloop = 1
        else:
            print("Invalid input, valid inputs include",valid_awnsers)
            examine = int(input())
    
    print("---------------------------------------------")
    if examine == 2:
        print("Your opponent")
