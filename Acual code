def Play_card(card,target):
    global enemyHP
    global enemyMaxHP
    global HP
    global enemyHP
    if target == 1:
        enemyHP -= cards_atk[card]
    if target == 0:
        HP -= cards_atk[card]
    print("you did ",cards_atk[card], "damage")
    if enemyHP > enemyMaxHP:
        enemyHP = enemyMaxHP
    if HP > MaxHP:
        HP = MaxHP









Encoutner_setup()
